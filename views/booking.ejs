<%-  include('./layouts/header') %>
    <%-  include('./layouts/navbar') %>
    <main class="tayy bg-center bg-cover bg-no-repeat">
       
       <form action="/s" method="post" onsubmit="return validateFrom()" class="flex flex-col items-center bg-gradient-to-t from-black via-black  py-32">
        <div class="mb-8">
            <h1 class="text-center text-3xl text-white font-bold underline">Function Booking</h1>
        </div>
        <div class="flex flex-col sm:flex-row sm:space-x-3 sm:flex-wrap justify-center">
            <div>
                <div class="m-1 text-lg text-white font-semibold text-semibold">Slip Number</div>
                <input class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400"  type="number" value="<%= Math.floor(Math.random() * 10000) %>" placeholder="" name="slip">
            </div>
            <div>
                <div class="m-1 flex text-lg text-white font-semibold text-semibold">Customer Name</div>
                <b><span class="text-pink-300 absolute my-[-6px] " id="formerror">  </span></b>
            <input class="my-4 border border-black  pr-14 py-3 pl-2 rounded-lg bg-gray-400" type="text" id="name" placeholder="Customer Name" name="name"  required>
          </div>
          <div>
            <b><span class="text-pink-300 absolute my-8 " id="formerror1">  </span></b>
            <div class="m-1 text-lg text-white font-semibold text-semibold" >Phone Number</div>
            <input class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400" required type="tel" title="type like 03027331321" pattern="^[0-9]{11}" placeholder="Enter Phone Number" id="phone" name="number">
          </div>
        
          <div>
            <b><span class="text-pink-300 absolute my-8 " id="formerror1">  </span></b>
            <div class="m-1 text-lg text-white font-semibold text-semibold" >CNIC</div>
            <input class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400" required title="type CNIC like 34101-3214242-1" pattern="^[0-9]{5}-[0-9]{7}-[0-9]{1}$" type="text" placeholder="Enter Phone Number"  name="CNIC">
          </div>
        
          <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold">Customer Address</div>
            <input class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400" type="text" placeholder="Enter Customer Address" name="address" required>
          </div>
        
         <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold" >Sitting Plan</div>
            <input required class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400"   type="number" placeholder="Enter Sitting Plan" name="sitting">
         </div>
       
    </div>
    <div class="flex flex-col sm:flex-row sm:space-x-3 sm:flex-wrap justify-center"> 

        <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold">Function Type</div>
            <select required name="fuction" class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg cursor-pointer  bg-gray-400">
                <option value="" >Select here</option>
                <option name="fuction" >Walima</option>
                <option name="fuction" >Barat</option>
                <option  name="fuction">Mendi</option>
                <option name="fuction" >Birthday</option> 
                <option name="fuction" >Other</option> 
            </select>
        </div>
        
        <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold">Stage DEcoration</div>
            <select required name="stage" class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg cursor-pointer  bg-gray-400">
                <option value="" selected>Select here</option>
                <option name="stage" >yes</option>
                <option name="stage" >no</option>
               
            </select>
        </div>
        
        <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold">Area Type</div>
            <select   name="area" class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg cursor-pointer  bg-gray-400"  required>
                <option value="">Select here</option>
                <option name="area" >Basement</option>
                <option name="area"  >Ground Floor</option>
                <option name="area" >Roof Area</option>
            </select>

        </div>
       <div>
        <div class="m-1 text-lg text-white font-semibold text-semibold">Event Time</div>
        <select  name="t" class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg cursor-pointer bg-gray-400 " required>
            <option value="">Select here</option>
            <option name="t" >Day(1pm-4pm)</option>
            <option  name="t">Night(6pm-10pm)</option>
        </select>

       </div>
        <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold">Total Rent</div>
            <input required class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400" type="tel" id="value1" placeholder="Enter Total Rent" name="t_rent">
        </div>
        <div> 
            <div class=" text-lg text-white font-semibold text-semibold">Advance Rent</div>
            <input required class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400"  type="tel" placeholder="" id="value2" name="a_rent"></div>
    </div>

    <div class="flex space-x-3">
        <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold">Remaining Rent</div>
            <input class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg bg-gray-400" type="tel" placeholder="" name="r_rent"  id="result">

        </div>
        <div>
            <div class="m-1 text-lg text-white font-semibold text-semibold">Booking Date</div>
            <input class="my-4 border border-black pr-14 py-3 pl-2 rounded-lg cursor-pointer bg-gray-400"  required type="date" name="date">
 
        </div>
        
       
    </div>
    
    <div class="flex space-x-4">
        <button class="my-4 border border-gray-600 cursor-pointer bg-gradient-to-t from-black via-black to-violet-60 text-white  px-2 py-1 rounded-lg" type="submit" placeholder="Confirm Booking"  onclick="sub" > booked event <button> 
        <a href="/home" class="my-4 border border-gray-600 cursor-pointer bg-gradient-to-t from-black via-black to-violet-60 text-white  px-2 py-1 rounded-lg" >REST</a>
    </div>
       

       </form>

  
     
    </main>
    <script>
        window.addEventListener("load", function() {
      document.getElementById("value1").addEventListener("input", addValues);
      document.getElementById("value2").addEventListener("input", addValues);
    });
    
    function addValues() {
      var value1 = document.getElementById("value1").value;
      var value2 = document.getElementById("value2").value;
      var result = parseInt(value1) - parseInt(value2);
      document.getElementById("result").value = result;
    }
    //form submissions

    let validateFrom=()=>{
        let n = document.getElementById('name').value;
    console.log(n);
    if (n.length>20) {
       let err=document.getElementById('formerror').innerHTML="*your name is too long"
       return false;
    }
    //for phone number
    let num=document.getElementById('phone').value;
    console.log(num);
    if(isNaN(num)){
        let err=document.getElementById('formerror1').innerHTML="**enter number only"
        return false;
    }
    if (num.length>11 || num.length<11 ) {
        let err=document.getElementById('formerror1').innerHTML="**enter must be 11 digits"
        return false;
    }
    
} 


   
    </script>
